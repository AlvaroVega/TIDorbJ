<project name="naming" basedir="." default="all">
	
	<target name="upToDate">
			<uptodate property="tidorbj.idl.naming.uptodate" targetfile="${tidorbj.idl.naming.lib}">
				<srcfiles dir="." includes="*.idl"/>		
			</uptodate>
		</target>

	<target name="all" depends="init, upToDate" unless="tidorbj.idl.naming.uptodate">
	
		<sequential>
			<idl2java srcdir="." source="CosNaming.idl" destdir=".java" package="org.omg"/>		   
		    
	       	<javac srcdir=".java" debug="${tidorbj.debug}" destdir=".class" encoding="${tidorbj.encoding}">
	       		<classpath>
	       			<path location="${tidorbj.util.lib}"/>
	       			<path location="${tidorbj.idl.orb.lib}"/>
	       		</classpath>
	       	</javac>
			<jar basedir=".class" destfile="${tidorbj.idl.naming.lib}"/>
		</sequential> 
	</target>
	
	<target name="init" >
		<mkdir dir=".class"/>
		<mkdir dir=".java"/>
	</target>
	
	<target name="clean" >
		<delete dir=".class"/>
		<delete dir=".java"/>
		<delete file="${tidorbj.idl.naming.lib}"/>
	</target>
	
	
</project>