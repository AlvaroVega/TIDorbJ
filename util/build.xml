<project name="util" basedir="." default="all">

<property name="classes" location="./.class"/>

	<target name="upToDate">
			<uptodate property="tidorbj.util.uptodate" targetfile="${tidorbj.util.lib}">
				<srcfiles dir="." includes="**/*.java"/>		
			</uptodate>		
		</target>
		
			
	<target name="all" depends="init, upToDate" unless="tidorbj.util.uptodate">

		<javac destdir="${classes}" srcdir="." debug="tidorbj.debug" encoding="${tidorbj.encoding}"/>
		<jar file="${tidorbj.util.lib}" basedir="${classes}"/>
	</target>

	<target name="init">
		<mkdir dir="${classes}"/>
	</target>

	<target name="clean">
		<delete dir="${classes}"/>	
	</target>

</project>