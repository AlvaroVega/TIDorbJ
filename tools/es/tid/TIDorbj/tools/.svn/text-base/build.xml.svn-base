<project name="echo" default="all" basedir=".">


  <property name="tidorbj.test.home" location="../../"/>
  <property name="tidorbj.test.debug" value="false"/>
  <property name="tidorbj.home" location="${tidorbj.test.home}/../TIDorbJ"/>
  <property name="tididlc.home" location="${tidorbj.test.home}/../TIDIdlc"/>
  <import file="${tididlc.home}/build/properties.xml"/>
  <import file="${tididlc.home}/build/tasks.xml"/>

  <property name="contest.home" location="${tidorbj.test.home}/../Shadows/JavaConTest"/>

  <target name="debug">
    <property name="tidorbj.test.debug" value="true"/>
    <antcall target="all" inheritall="true" inheritrefs="true">
      <param name="tidorbj.test.debug" value="true"/>
    </antcall>
  </target>

  <target name="compile" depends="idl">
    <javac debug="${tidorbj.test.debug}" srcdir="." includes="*.java Echo/*.java">
      <classpath>
        <pathelement path="."/>
        <pathelement location="${tidorbj.home}/dist/lib/tidorbj.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="inst" depends="compile">
    <java classname="com.ibm.contest.instrumentation.Instrument">
      <arg value="."/> 
      <classpath>
        <pathelement path="."/>
        <pathelement location="${contest.home}/Lib/ConTest.jar"/>
      </classpath>
    </java>
  </target>
  
  <target name="idl">
    <idl2java srcdir="." destdir="." source="Echo.idl"/>
  </target>
  
  <target name="client" depends="compile">
    <java classname="EchoClient">
      <classpath>
        <pathelement path="."/>
        <pathelement location="${tidorbj.home}/dist/lib/tidorbj.jar"/>
      </classpath>
    </java>	
  </target>
  
  <target name="server" depends="compile">
    <java classname="EchoServer">
      <classpath>
        <pathelement path="."/>
        <pathelement location="${tidorbj.home}/dist/lib/tidorbj.jar"/>
      </classpath>
    </java>
  </target>
  
  <target name="all" depends="compile">
  </target>
  
  <target name="clean">	
    <delete dir="${basedir}/Echo"/>
    <delete dir="${basedir}/com_ibm_contest"/>
    
    <delete>
      <fileset dir="." includes="**/*.class **/*.class_backup"/>
    </delete>
    <!-- 
         <ant target="clean" dir="source" inheritrefs="true" inheritall="true"/>
    -->
  </target>
  
  
  
</project>
